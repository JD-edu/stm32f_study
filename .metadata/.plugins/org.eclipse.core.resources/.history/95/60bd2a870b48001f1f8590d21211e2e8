#ifndef DYNAMIXEL_AX12A_H
#define DYNAMIXEL_AX12A_H

// 2024 . 7 . 18 . 4:00 AM
// uint8_t ==> unsigned_int--> bit 8
// uint16_t ==> unsigned_char --> bit 16
// Dynamixel AX-12A가 동작하기위한 헤더파일로 시작할때 내용은 주소와 함수입니다.
// This header file is making for motor control
// create and setting " #define " address

//" 추후에 제어 수식을 넣고 움직이기위한 코드로 사용될 예정입니다"
// 일반적으로 움직이기위한 함수는 send_goal_position --> 제어를 통한 위치로 이동
// 어떠한 속도로 움직일것이냐에 대한 함수는 send_moving_speed --> 제어를 통한 속도로 작동
// 얼마나 강한 토크로 제어가 될것이냐 --> send_torque_limit --> 제어를 통한 토크 적용


#define DXL_ID_ADDRESS                		0x03 // --> 다이나믹셀의 아이디는 순차적으로 0x01, 0x02,,, 순으로 갑니다.
#define DXL_BAUD_RATE_ADDRESS         		0x04 // --> u2d2 에서 115200 의속도로 통일해서 쓸것이기에 안건드려도 충부하다고 생각


// motor _ goal _position _ address/////////////
#define DXL_GOAL_POSITION_ADDRESS     		0x1E
// motor _ movinf speed _ address
#define DXL_MOVING_SPEED_ADDRESS      		0x20
// motor _torque _ address
#define DXL_MAX_TORQUE_ADDRESS        		0x0E
/////////////////////////////////////////////////


// hardware check  & return value////////////////
#define DXL_LED_ADDRESS               		0x19
#define DXL_PRESENT_POSITION_ADDRESS  		0x24
#define DXL_PRESENT_SPEED_ADDRESS     		0x26
#define DXL_PRESENT_LOAD_ADDRESS      		0x28
#define DXL_PRESENT_VOLTAGE_ADDRESS   		0x2A
////////////////////////////////////////////////

#define DXL_RETURN_DELAY_TIME_ADDRESS 		0x05
#define DXL_CW_ANGLE_LIMIT_ADDRESS    		0x06
#define DXL_CCW_ANGLE_LIMIT_ADDRESS   		0x08
#define DXL_TEMPERATURE_LIMIT_ADDRESS 		0x0B
#define DXL_VOLTAGE_LIMIT_LOW_ADDRESS 		0x0C
#define DXL_VOLTAGE_LIMIT_HIGH_ADDRESS 		0x0D

#define DXL_STATUS_RETURN_LEVEL_ADDRESS 	0x10
#define DXL_ALARM_LED_ADDRESS         		0x11
#define DXL_ALARM_SHUTDOWN_ADDRESS    		0x12
#define DXL_TORQUE_ENABLE_ADDRESS     		0x18




#define DXL_CW_COMPLIANCE_MARGIN_ADDRESS 	0x1A
#define DXL_CCW_COMPLIANCE_MARGIN_ADDRESS 	0x1B
#define DXL_CW_COMPLIANCE_SLOPE_ADDRESS 	0x1C
#define DXL_CCW_COMPLIANCE_SLOPE_ADDRESS 	0x1D




#define DXL_TORQUE_LIMIT_ADDRESS      		0x22
#define DXL_PRESENT_TEMPERATURE_ADDRESS 	0x2B
#define DXL_REGISTERED_INSTRUCTION_ADDRESS 	0x2C
#define DXL_MOVING_ADDRESS           	 	0x2E
#define DXL_LOCK_ADDRESS              		0x2F
#define DXL_PUNCH_ADDRESS             		0x30


void Dynamixel_CreatePacket(uint8_t id, uint8_t address, uint16_t value, uint8_t *packet);
void Dynamixel_SendGoalPosition(uint8_t id, uint16_t goal_position);
void Dynamixel_SendMovingSpeed(uint8_t id, uint16_t moving_speed);

void Dynamixel_SendTorqueLimit(uint8_t id, uint16_t torque_limit);
