/* USER CODE BEGIN 4 */
void HAL_TIM_PeriodElapsedCallback(TIM_HandleTypeDef *htim)
{
  if (htim == &htim7) {
    HAL_GPIO_TogglePin(GPIOD, GPIO_PIN_13);
  }
}

int __io_putchar (int ch)
{
  (void)HAL_UART_Transmit(&huart2, (uint8_t *)&ch, 1, 100);
  return ch;
}

/* USER CODE END 4 */

